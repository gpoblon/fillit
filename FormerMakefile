OBJS	= $(addprefix $(OBJS_D),$(SRCS:.c=.o))

CC		= gcc
C_FLAGS = -Wall -Werror -Wextra

LIBFT	= ./libft/libft.a
LIBINC	= -I./libft
LIBLINK	= -L./libft -lft

SRCS_D	= ./srcs/
INC_D	= -I./includes/
OBJS_D	= ./objs

all: lft $(NAME)

lft: $(LIBFT)

$(LIBFT):
		make -C ./libft
		mkdir $(OBJS_D)

$(OBJS_D)%.o:$(SRCS_D)%.c
		$(CC) $(C_FLAGS) $(LIBINC) $(INC_D) -o $@ -c $<

$(NAME): $(OBJS)
		$(CC) $(LIBLINK) -o $(NAME) $(OBJS)
